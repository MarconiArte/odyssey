---
interface Props {
  title: string;
  description: string;
  image?: string;
  author?: string;
}

const {
  title,
  description,
  image = 'https://odysseydev.com.ar/og-image.png',
  author = 'OdysseyDev'
} = Astro.props;

const currentUrl = new URL(Astro.request.url).href;
---

<title>{title}</title>

<!-- Primary Meta Tags -->
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content={author} />
<meta name="keywords" content="desarrollo web, aplicaciones web, landing pages, diseño web, e-commerce, sistemas de gestión" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={currentUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={currentUrl} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={image} />

<!-- Canonical -->
<link rel="canonical" href={currentUrl} />

<!-- Structured Data (JSON-LD) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "OdysseyDev",
  "description": "Desarrollo de aplicaciones web profesionales y soluciones tecnológicas",
  "url": "https://odysseydev.com.ar",
  "logo": "https://odysseydev.com.ar/logo.svg",
  "sameAs": [
    "https://linkedin.com/company/odysseydev"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "Customer Support",
    "email": "hola@odysseydev.com.ar"
  }
}
</script>
