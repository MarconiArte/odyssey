---
import '../styles/global.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Odyssey - Desarrollo de aplicaciones web profesionales: desde landing pages hasta sistemas complejos" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Odyssey - Desarrollo Web Profesional</title>
	</head>
	<body class="bg-black text-white antialiased">
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100vh;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
	}

	* {
		scroll-behavior: smooth;
	}

	/* Scroll bar styling */
	::-webkit-scrollbar {
		width: 10px;
	}

	::-webkit-scrollbar-track {
		background: #000;
	}

	::-webkit-scrollbar-thumb {
		background: linear-gradient(to bottom, #a855f7, #9333ea);
		border-radius: 5px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: linear-gradient(to bottom, #c084fc, #a855f7);
	}
</style>
