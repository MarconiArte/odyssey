---
import '../styles/global.css';
import SEO from '../components/SEO.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'OdysseyDev | Desarrollo de Software a Medida',
  description = 'Diseñamos e implementamos arquitecturas técnicas escalables, sistemas de gestión y e-commerce robustos para potenciar tu negocio.'
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#000000" />
		<SEO title={title} description={description} />
	</head>
	<body class="text-white antialiased">
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100vh;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
	}

	* {
		scroll-behavior: smooth;
	}

	/* Scroll bar styling */
	::-webkit-scrollbar {
		width: 10px;
	}

	::-webkit-scrollbar-track {
		background: #000;
	}

	::-webkit-scrollbar-thumb {
		background: linear-gradient(to bottom, #a855f7, #9333ea);
		border-radius: 5px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: linear-gradient(to bottom, #c084fc, #a855f7);
	}
</style>
