---
import { Icon } from 'astro-icon/components';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'OdysseyDev - Desarrollo Web', description = 'Agencia de desarrollo web especializada en crear soluciones digitales de alta calidad' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/webp" href="/odysseylogo.webp" />
    <title>{title}</title>
  </head>
  <body>
    <div data-netlify-identity-menu></div>
    <slot />
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script is:inline>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.init();
      }
      
      // Si hay un token de invitacion en la URL, redirigir a /admin con el token
      const hash = window.location.hash;
      if (hash && hash.includes('invite_token')) {
        window.location.href = '/admin' + hash;
      }
    </script>
  </body>
</html>
